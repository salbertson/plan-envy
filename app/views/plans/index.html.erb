<h1>Listing plans</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Preview image</th>
    <th>Plan file</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plans.each do |plan| %>
  <tr>
    <td><%= plan.name %></td>
    <td><%= plan.description %></td>
    <td><%= image_tag plan.preview_image.url(:thumb) %></td>
    <td><%= link_to "download", plan.plan_file.url %></td>
    <td><%= link_to 'Show', plan %></td>
    <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
    <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

